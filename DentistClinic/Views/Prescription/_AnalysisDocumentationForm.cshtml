 
@model AnalysisPrescriptionViewModel;
<form id="analysisForm" asp-controller="Prescription" asp-action="AnalysisDocumentation"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onPrescriptionRequestBegin"
      data-ajax-success="onPrescriptionRequestSuccess"
      data-ajax-failure="onPrescriptionRequestFailure"
      data-ajax-complete="onPrescriptionRequestComplete" enctype="multipart/form-data">
    <div class="row">
        <div class="">
            <input type="hidden" asp-for="@Model.Id"/>
            <input type="hidden" asp-for="@Model.AnalysisId"/>
            <input type="hidden" asp-for="@Model.PrescriptionId"/>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <div class="upload-card">
                    <div class="form-upload">
                        <span class="inner">
                            Upload Documentations
                            <span class="select">Browse</span>
                        </span>
                        <input type="file" multiple="" accept="image/jpg,image/png,image/jpeg" asp-for="@Model.Documentations">
                    </div>
                    <div class="image-container">
                        @foreach (var document in Model.AnalysisPrescriptionImage)
                        {
                            <div class="image" style="margin-right:5px">
                                <img src="data:image /*;base64,@(Convert.ToBase64String(document.Image))" alt="image">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <!--begin::solid autosize textarea-->
            <div class="rounded border d-flex flex-column p-5 my-3">
                <label for="" class="form-label">Analysis Comment</label>
                <textarea class="form-control form-control form-control-solid" asp-for="@Model.Comment" data-kt-autosize="true"></textarea>
            </div>
            <!--end::solid autosize textarea-->
        </div>
        <div class="col-12">
            <div class="actions">
                <button type="button" class="btn-sm btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn-sm btn btn-primary me-2">
                    <span class="indicator-label">
                        Add
                    </span>
                    <span class="indicator-progress">
                        Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
</form>