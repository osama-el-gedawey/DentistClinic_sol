@inject UserManager<ApplicationUser> userManager;
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewData["Title"] = "About";
    Layout = "_HomeLayout";
    ApplicationUser applicationUser = await userManager.GetUserAsync(User) ?? new ApplicationUser();

}

<!-- About Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-7">
                <div class="section-title mb-4">
                    <h5 class="position-relative d-inline-block text-primary text-uppercase">About Us</h5>
                    <h1 class="display-5 mb-0">The World's Best Dental Clinic That You Can Trust</h1>
                </div>
                <h4 class="text-body fst-italic mb-4">
                    Choose BHNS for unparalleled dental care
                </h4>
                <p class="mb-4">Where precision meets compassion for your dental well-being, our skilled team, armed with cutting-edge technology, ensures a transformative and stress-free experience, making your radiant smile our top priority</p>
                <div class="row g-3">
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.3s">
                        <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>Advanced Treatment</h5>
                        <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>Professional Staff</h5>
                    </div>
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.6s">
                        <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>Modern Equipment</h5>
                        <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>Fair Prices</h5>
                    </div>
                </div>
                @if (signInManager.IsSignedIn(User))
                { @if (await userManager.IsInRoleAsync(applicationUser!, "User"))
                    {
                        <a class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" asp-controller="Patients" asp-action="Details" asp-route-id="@applicationUser.PatientId">Appointment</a>
                    }
                    else
                    {
                        <a class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" animated slideInLeft">Appointment</a>
                    }

                }
                else
                {
                    <a class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" asp-area="Identity" asp-page="/Account/Login" class="nav-link w-inline-block">Appointment</a>

                }
                @* <a class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" data-wow-delay="0.6s">Make Appointment</a> *@
            </div>
            <div class="col-lg-5" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="~/Web/img/aboutUsPhoto.png">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
