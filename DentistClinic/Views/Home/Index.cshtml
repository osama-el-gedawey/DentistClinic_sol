                        <h1 class="display-1 text-white mb-md-4 animated zoomIn">Take The Best Quality Dental Treatment</h1>

                        @if (signInManager.IsSignedIn(User))
                        { @if (await userManager.IsInRoleAsync(applicationUser!, "User"))
                            {
                                <a class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft" asp-controller="Patients" asp-action="Details" asp-route-id="@applicationUser.PatientId">Appointment</a>
                            }
                            else
                            {
                                <a class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Appointment</a>
                            }

                        }
                        else
                        {
                            @* <a href="appointment.html" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Appointment</a> *@
