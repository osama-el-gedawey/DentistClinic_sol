
@model ReceptionViewModel;
<form id="ReceptionForm" asp-controller="Receptions" asp-action=@(Model.Id == null ? "Create" : "Update") 
        data-ajax-method="post" 
        data-ajax="true"
      data-ajax-begin="onRequestBegin" 
      data-ajax-success="onRequestSuccess" 
      data-ajax-failure="onRequestFailure" 
      data-ajax-complete="onRequestComplete" enctype="multipart/form-data">
    <div class="row">
        <input type="hidden" asp-for="@Model.Id"/>
        <div class="col-12">
            <div class="mb-3">
                <div class="form-floating mb-2">
                    <input class="form-control form-control-solid" asp-for="@Model.Email" placeholder="Email..." />
                    <label class="form-label" asp-for="@Model.Email"></label>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Email"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <div class="form-floating mb-2">
                    <input class="form-control form-control-solid" asp-for="@Model.PhoneNumber" placeholder="Mobile Number..." />
                    <label class="form-label" asp-for="@Model.PhoneNumber"></label>
                </div>
                <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <div class="form-floating mb-2">
                    <input class="form-control form-control-solid" asp-for="@Model.Password" placeholder="Password..." />
                    <label class="form-label" asp-for="@Model.Password"></label>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="actions">
                <button type="button" class="btn-sm btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn-sm btn btn-@(Model.Id == null ? "primary" : "warning")  me-2">
                    <span class="indicator-label">
                        @(Model.Id == null ? "Add" : "Edit")
                    </span>
                    <span class="indicator-progress">
                        Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
</form>